<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="form" label="COM_USERIDEAS_ITEM_DEFAULT_LABEL">

        <field name="title" type="text" class="span12"
               label="COM_USERIDEAS_FIELD_TITLE"
               size="40"
               filter="trim"
               required="true"
                />

        <field name="description" type="editor" class="span12"
               label="COM_USERIDEAS_FIELD_DESCRIPTION"
               filter="safehtml"
               rows="10"
               required="true"
               buttons="false"
               />

        <field name="catid" type="category"
               label="COM_USERIDEAS_CATEGORY"
               extension="com_userideas"
               required="true"
               filter="int"
               published="1"
               class="js-uideas-catid-select"
               />

        <field name="captcha" type="captcha"
               label="COM_USERIDEAS_CAPTCHA_LABEL"
               description="COM_USERIDEAS_FRONT_CAPTCHA_DESC"
               validate="captcha"
               />

        <field name="id" type="hidden" filter="int"/>

    </fieldset>
</form>
